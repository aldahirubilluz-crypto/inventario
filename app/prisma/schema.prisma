generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  rol           Rol       @default(OBSERVER)
  phone         String?
  isActive      Boolean   @default(true)
  lastLogin     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts            Account[]
  sessions            Session[]
  passwordResetTokens PasswordResetToken[]

  @@map("usuarios")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model PasswordResetToken {
  id         String   @id @default(cuid())
  userId     String
  email      String
  token      String
  code       String
  expires    DateTime
  lastSentAt BigInt?
  createdAt  DateTime @default(now())

  isUsed      Boolean   @default(false)
  isValidated Boolean   @default(false)
  usedAt      DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Rol {
  ADMIN
  MANAGER
  OBSERVER
}

model Asset {
  id Int @id @default(autoincrement())

  oldLabel            String   @unique // pre etiqueta
  patrimonialCode     String   @unique // codigo_patrimonial
  description         String // descripcion
  purchaseOrder       String // nro_orden
  purchaseValue       Decimal  @db.Decimal(12, 2) // valor_compra
  purchaseDate        DateTime // fecha_compra
  documentType        String // tipo_doc_alta
  pecosaNumber        String // nro_pecosa
  registrationDate    DateTime // fecha_alta
  location            String // sede
  costCenter          String // centro_costo
  responsibleEmployee String // empleado_responsable
  finalEmployee       String // empleado_final
  locationType        String // tipo_ubicac
  locationSubtype     String // subtipo_ubicac
  features            String? // caracteristicas
  model               String // modelo
  dimensions          String // medidas
  serialNumber        String // nro_serie
  brand               String // marca
  chassisNumber       String? // numero de chais
  engineNumber        String? // numero de motor
  licensePlate        String? // placa

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("assets")
}
